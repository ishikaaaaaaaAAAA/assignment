<!-- views/sets.ejs -->
<%- include('partials/navbar', { page: '/lego/sets' }) %>
<h1>Collection</h1>
<table>
  <thead>
    <tr>
      <th>Image</th>
      <th>Name</th>
      <th>Theme</th>
      <th>Year</th>
      <th>Parts</th>
      <th>Details</th>
    </tr>
  </thead>
  <tbody>
    <%- include('partials/navbar', { page: '' }) %>
        <div class="hero">
            <h1><%= set.name %></h1>
            <p>Below you will find detailed information about the set:</p>
          </div>
          <img src="<%= set.img_url %>" alt="<%= set.name %>">
          <p>Year: <%= set.year %></p>
          <p>Theme: <%= set.theme %></p>
          <p>Number of Parts: <%= set.num_parts %></p>
          <p id="quote"></p>
          <a href="#" onclick="history.back(); return false;">Back</a>
          
          <script>
            document.addEventListener("DOMContentLoaded", () => {
              fetch("https://quotable.io/random")
                .then(response => response.json())
                .then(data => {
                  document.getElementById("quote").innerText = `${data.content} â€” ${data.author}`;
                });
            });
          </script>
  </tbody>
</table>
